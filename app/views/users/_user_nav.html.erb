<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.name %>.
    <% if current_user.guest? %>
      <%= link_to "Become a member", sign_up_path %>
    <% else %>
      <%= link_to "Log out", log_out_path %>
    <% end %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>
