<div class="grid-container">
  <div class="grid-50">
    <img alt="Logo BankBudz" id="bb-logo-small-image" src="/assets/logo_small_bankbudz.png">
    <h1>Log in</h1>

    <%= form_tag sessions_path, id:"login-form" do %>
      <p>
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
      </p>
      <p>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </p>
      <div class="button"><%= submit_tag "Log In" %></div>
    <% end %>

    <h1 class="guest-checkout">Or Checkout as Guest</h1>
      <div class="button" id="checkout-button-guest">
        <%= link_to 'Guest Checkout', new_transaction_path(:guest => true) %>
      </div>
  </div>

  <div class="grid-50">
    <h1>Create a new account</h1>
    <%= render 'users/form', locals: { user: @user } %>
  </div>
</div>

<% content_for :title do %>
  Sign Up or Log In
<% end %>
