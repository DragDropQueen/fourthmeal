<div class="grid-container">
  <div class="grid-50">
    <h1>Log in</h1>

    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
      </p>
      <p>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </p>
      <p class="button"><%= submit_tag "Log In" %></p>
    <% end %>
  </div>

  <div class="grid-50">
    <h1>Sign Up</h1>
    <%= render 'users/form' %>
  </div>
</div>

<% content_for :title do %>
  Sign Up or Log In
<% end %>