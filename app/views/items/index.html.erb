<header id="body_header">
  <h1>Items</h1>
</header>

<ul id="menu_list">
  <% @items.each do |item| %>
    
    <li id="menu_item">
      <header>
        <h3><%= item.title %></h3>
      </header>
      <section>
        <ul>
          <li><%= item.description %></li>
          <li><%= number_to_currency(item.price) %></li>
          <li><%= item.photo %></li>
        </ul>
      </li>
  <%end%>
</ul>

<% content_for :title do %>
  Items
<% end %>


