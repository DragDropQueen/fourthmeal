<header id="body-header" class="grid-container">
  <div id="menu_greeting" class="grid-40">
    <h1>On the Menu At Ono</h1>
  </div>
  <section id="other-products" class="grid-60">
    <% @categories = Category.all %>
    <% @categories.each do |category| %>
      <a href="#" class="category"><%= category.title %></a>
    <% end %>
  </section>
</header>

<section id="" class="grid-container">
  <% Item.all.each do |item| %>
    <%= render partial: 'items/item', locals: {item: item } %>
  <% end %>
</section>


<% content_for :title do %>
  Items
<% end %>


